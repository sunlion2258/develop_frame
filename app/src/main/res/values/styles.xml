<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="view1color">@color/common_blue</item>//textview1的颜色
    </style>


    <style name="AppTheme.Dark" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_black</item>
        <item name="colorPrimaryDark">@color/color_black</item>
        <item name="colorAccent">@color/color_black</item>
        <item name="view1color">@color/color_ff0000</item>//textview1的颜色
    </style>


    <!-- 自定义等待Dialog -->
    <style name="AlertDialog.WaitProgress" parent="@style/Theme.AppCompat.Dialog">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="LoadProgressDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:backgroundDimEnabled">true</item><!-- 模糊 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimAmount">0</item><!-- 灰度0-1 -->
        <!--Dialog图标着色-->
        <!--<item name="colorAccent">#ffffff</item>-->
    </style>

    <!--H5进度条样式-->
    <style name="crowd_item_progressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/crowd_progressbar_background</item>
        <item name="android:minHeight">10dp</item>
        <item name="android:maxHeight">10dp</item>
    </style>

    <item name="icon_change_language_dark" type="drawable">@drawable/icon_change_language_dark
    </item>

    <!--疼痛评估数值-->
    <style name="vas_seekbar_title_img">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/dp_20</item>
        <item name="android:src">@drawable/img_shuzi</item>
        <item name="android:layout_marginBottom">@dimen/dp_20</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_marginStart">@dimen/dp_105</item>
        <item name="android:layout_marginEnd">@dimen/dp_105</item>
    </style>

    <style name="SettingSeekBarBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="android:layout_marginBottom">@dimen/dp_30</item>
        <item name="android:progressDrawable">@drawable/vas_border_gray</item>
        <item name="android:splitTrack">false</item>
        <item name="android:layout_marginLeft">@dimen/dp_105</item>
        <item name="android:layout_marginRight">@dimen/dp_105</item>
        <item name="android:paddingTop">@dimen/dp_2</item>
        <item name="bsb_second_track_color">#00000000</item>
        <item name="bsb_show_section_mark">false</item>
        <item name="android:background">@drawable/vas_border_gray</item>
        <item name="bsb_thumb_radius">@dimen/dp_18</item>
        <item name="bsb_thumb_color">@color/common_text_grey</item>
        <!--  显示下侧文字  -->
        <item name="bsb_show_section_text">false</item>
        <item name="bsb_thumb_radius_on_dragging">@dimen/dp_20</item>
        <!--  进度条背景色-->
        <item name="bsb_track_color">#00000000</item>
        <!--气泡里字的颜色-->
        <item name="bsb_bubble_text_color">#00000000</item>
        <item name="bsb_max">10</item>
        <item name="bsb_min">0.0</item>
    </style>

</resources>
